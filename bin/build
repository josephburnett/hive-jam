#!/usr/bin/env bash

set -e

ROOT=`git rev-parse --show-toplevel`
export GOPATH=$ROOT/osc-bridge/
PATH=$GOPATH/bin:$PATH

cd $ROOT

echo "Compiling UI..."
( cd hive-jam ; $ROOT/bin/vendor/lein cljsbuild once min )

echo "Setting up Golang dependencies and go-bindata tool..."
go get github.com/tools/godep
( cd $GOPATH; godep restore )
go install github.com/jteeuwen/go-bindata/...

echo "Packaging UI and Sonic Pi server files as data..."
mkdir -p osc-bridge/data
go-bindata -o osc-bridge/src/hivejam/data/data.go -pkg data \
	   sonic-pi/... \
	   hive-jam/resources/public/...

echo "Building the Sonic Jam binary..."
mkdir -p build
go build -o $ROOT/build/hive-jam \
    $GOPATH/src/hivejam/server/server.go

echo "Done."
echo "Local mode: Start Sonic Pi and then run 'build/hive-jam'."
echo "Headless mode: Run 'sudo bin/with-gce-env launch'."
